                theme_text_color: "Custom"
                text_color: 0, 0, 0, 1
        ScrollView:
            MDList:
                id: exercicios_list

ScreenManager:
    MDScreen:
        name: "main"
        MDBoxLayout:
            orientation: "vertical"
            md_bg_color: 0.96, 0.97, 0.98, 1
            
            MDTabs:
                id: tabs
                TabDashboard:
                    id: dash_tab
                    text: "Painel"
                TabAlunos:
                    id: alunos_tab
                    text: "Alunos"
                    icon: "account-group"
                TabTreinos:
                    id: treinos_tab
                    text: "Treinos"
                    icon: "dumbbell"
                TabExercicios:
                    id: exercicios_tab
                    text: "Exercícios"
                    icon: "arm-flex"
