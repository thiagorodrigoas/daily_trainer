                id: treinos_list

<TabExercicios>:
    MDBoxLayout:
        orientation: "vertical"
        md_bg_color: 0.96, 0.97, 0.98, 1
        MDBoxLayout:
            adaptive_height: True
            padding: dp(12)
            spacing: dp(8)
            MDLabel:
                text: "Exercícios"
                theme_text_color: "Custom"
                text_color: 0, 0, 0, 1
